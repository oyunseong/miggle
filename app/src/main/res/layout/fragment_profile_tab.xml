<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_background">

    <include
        android:id="@+id/my_page_appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/my_page_title_card"
        android:layout_width="311.3dp"
        android:layout_height="49.6dp"
        android:layout_marginTop="35.2dp"
        app:cardCornerRadius="25dp"
        app:cardElevation="3.3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_page_appbar">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_title_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_button_color">

            <TextView
                style="@style/Text.WhiteFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:textSize="16.7sp"
                app:layout_constraintBottom_toBottomOf="@id/my_page_title_constraint"
                app:layout_constraintLeft_toLeftOf="@id/my_page_title_constraint"
                app:layout_constraintRight_toRightOf="@id/my_page_title_constraint"
                app:layout_constraintTop_toTopOf="@id/my_page_title_constraint" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/my_page_myInfo_card"
        android:layout_width="311.3dp"
        android:layout_height="31.7dp"
        android:layout_marginTop="16.9dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_page_title_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_nickname_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/my_page_myInfo"
                style="@style/Text.MainColorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                app:layout_constraintBottom_toBottomOf="@id/my_page_nickname_constraint"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="@id/my_page_nickname_constraint"
                app:layout_constraintRight_toLeftOf="@id/my_page_nickname"
                app:layout_constraintTop_toTopOf="@id/my_page_nickname_constraint" />

            <TextView
                android:id="@+id/my_page_nickname"
                style="@style/Text.MainColorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:text="( 닉네임 님 )"
                app:layout_constraintLeft_toRightOf="@id/my_page_myInfo"
                app:layout_constraintRight_toRightOf="@id/my_page_nickname_constraint"
                app:layout_constraintTop_toTopOf="@id/my_page_myInfo" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/my_page_like_stock_card"
        android:layout_width="311.3dp"
        android:layout_height="31.7dp"
        android:layout_marginTop="16.9dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_page_myInfo_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_like_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                style="@style/Text.MainColorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관심정보 리스트"
                app:layout_constraintBottom_toBottomOf="@id/my_page_like_constraint"
                app:layout_constraintLeft_toLeftOf="@id/my_page_like_constraint"
                app:layout_constraintRight_toRightOf="@id/my_page_like_constraint"
                app:layout_constraintTop_toTopOf="@id/my_page_like_constraint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/my_page_notion_card"
        android:layout_width="311.3dp"
        android:layout_height="31.7dp"
        android:layout_marginTop="16.9dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/my_page_like_stock_card">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/my_page_notion_constraint"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <TextView
                android:id="@+id/notion_button_tv"
                style="@style/Text.MainColorFont"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="알람정보 리스트"
                app:layout_constraintBottom_toBottomOf="@id/my_page_notion_constraint"
                app:layout_constraintLeft_toLeftOf="@id/my_page_notion_constraint"
                app:layout_constraintRight_toRightOf="@id/my_page_notion_constraint"
                app:layout_constraintTop_toTopOf="@id/my_page_notion_constraint" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>


