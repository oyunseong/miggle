<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginHorizontal="22dp"
    android:layout_marginTop="8dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="9.3dp"
    app:cardElevation="3.3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stock_info_constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="51.7dp">

        <TextView
            android:id="@+id/stockName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16.1dp"
            android:layout_marginTop="10.7dp"
            android:ellipsize="end"
            android:letterSpacing="-0.04"
            android:maxLines="2"
            android:text="삼성전자"
            android:textColor="@color/main_color"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/stock_info_constraintLayout"
            app:layout_constraintTop_toTopOf="@id/stock_info_constraintLayout" />

        <TextView
            android:id="@+id/per"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:letterSpacing="-0.04"
            android:text="PER : 35"
            android:textColor="#8c7e1717"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="@id/stockName"
            app:layout_constraintTop_toBottomOf="@id/stockName" />

        <TextView
            android:id="@+id/pbr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:letterSpacing="-0.04"
            android:text="PBR : 35"
            android:textColor="#8c7e1717"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/per"
            app:layout_constraintTop_toBottomOf="@id/stockName" />

        <TextView
            android:id="@+id/psr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:layout_marginTop="2dp"
            android:letterSpacing="-0.04"
            android:text="PER : 35"
            android:textColor="#8c7e1717"
            android:textSize="10sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toRightOf="@id/pbr"
            app:layout_constraintTop_toBottomOf="@id/stockName" />

        <TextView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            app:layout_constraintRight_toRightOf="@id/stock_info_constraintLayout"
            app:layout_constraintTop_toTopOf="@id/stock_info_constraintLayout"
            app:layout_constraintBottom_toBottomOf="@id/stock_info_constraintLayout"
            android:layout_marginEnd="18dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>