<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/valueation_appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/valueation_ranking_button"
        android:layout_width="98.7dp"
        android:layout_height="31.7dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/main_button_state"
        android:gravity="center"
        android:letterSpacing="-0.04"
        android:text="랭킹"
        android:textColor="@drawable/text_color_state"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/valueation_calculator_button"
        app:layout_constraintTop_toBottomOf="@id/valueation_appbar" />

    <TextView
        android:id="@+id/valueation_calculator_button"
        android:layout_width="98.7dp"
        android:layout_height="31.7dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/main_button_state"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:letterSpacing="-0.04"
        android:text="계산기"
        android:textColor="@drawable/text_color_state"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/valueation_ranking_button"
        app:layout_constraintRight_toLeftOf="@id/valueation_like_stock_button"
        app:layout_constraintTop_toBottomOf="@id/valueation_appbar" />

    <TextView
        android:id="@+id/valueation_like_stock_button"
        android:layout_width="98.7dp"
        android:layout_height="31.7dp"
        android:background="@drawable/main_button_state"
        android:gravity="center"
        android:letterSpacing="-0.04"
        android:layout_marginTop="10dp"
        android:text="관심종목"
        android:textColor="@drawable/text_color_state"
        android:textSize="10sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/valueation_calculator_button"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valueation_appbar" />

    <FrameLayout
        android:id="@+id/valueation_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/valueation_ranking_button" />

</androidx.constraintlayout.widget.ConstraintLayout>
