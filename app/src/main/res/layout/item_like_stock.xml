<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/like_stock_recycler_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Text.BlackFont"
        tools:text="삼성전자"
        />
    <TextView
        android:id="@+id/like_stock_recycler_item_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Text.BlackFont"
        app:layout_constraintTop_toBottomOf="@id/like_stock_recycler_item_name"
        tools:text="005930"
        />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/like_stock_recycler_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:button="@drawable/custom_checkbox"
        />



</androidx.constraintlayout.widget.ConstraintLayout>